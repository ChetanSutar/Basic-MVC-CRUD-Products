@model Products
<h1>Delete Product</h1>
<h4> Are you want to delete "@Model.Name"</h4>
<form asp-controller="Products" asp-action="DeleteConfirm" method="post">
	<input asp-for="ID" type="hidden" />
	<button type="submit" class="btn btn-danger mt-2" >Delete</button>
</form>

<a asp-action="index" asp-controller="Products" class="btn btn-secondary" >Back to list</a>